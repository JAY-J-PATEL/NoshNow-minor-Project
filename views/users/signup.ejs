<% layout("/layouts/boilerplate") -%>
<style>
    .outer-div {
        width: 30rem;
        height: 550px;
        background-color: rgb(255, 255, 255);
        box-shadow: 3px 3px 10px rgb(158, 158, 158);
        margin-top: 2rem;
        margin-bottom: 2rem;
        border-radius: 10px;
    }

    .upper-div {
        text-align: center;
        padding-top: 20px;
    }

    .input_div {
        width: 100%;
    }

    .btn-signup {
        background-color: #fe424d;
        border-color: #fe424d;
        width: 100%;
        margin-top: 2rem;
    }

    @media(max-width:1024px) {
        .outer-div {
            width: 50rem;
            height: 36rem;
            margin-top: 12rem;
            margin-left: 2rem;
        }
    }

    <!-- @media(max-width:821px) {
        .outer-div {
            width:30rem;
            margin-top: 12rem;
            margin-left: 2rem;
        }
    } -->

    @media(max-width:768px) {
        .outer-div {
            width: 40rem;
            margin-top: 8rem;
            margin-left: 2rem;
        }
    }

    .createac {
        margin-left: 3.5rem;
        opacity: 0.8;
    }

    @media(max-width:420px) {
        .outer-div {
            width: 24rem;
            margin-top: 5rem;
            margin-right: 0;
            margin-left: 0;
            box-shadow: 12px 12px 12px 12px 15px gray;
        }

    }

</style>
<div class="main-signup-div">
    
<div class="outer-div col-xl-6 offset-xl-4 offset-xs-1 offset-auto">
    <div class="upper-div">
        <p><b>Register</b></p>
        <hr>
    </div>
    <div class="row">
        <h4 class="col-40 offset-1"><b>Welcome to Wanderlust</b></h1>
            <p class="createac">create account!</p>
        <div class="col-10 offset-1" class="inputs_div">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input 
                        type="text" 
                        name="username" 
                        id="username"
                        class="form-control" required>
                        <div class="invalid-feedback">Looks good!</title></div>
                </div>
    
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email"
                        class="form-control" required>
                        <div class="invalid-feedback">Enter Valid Email_Id</title></div>
                </div>
    
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        class="form-control" required>
                </div>
    
                <button class="btn btn-signup btn-success">SignUp</button>
            </form>
        </div>
    </div>
</div>
</div>