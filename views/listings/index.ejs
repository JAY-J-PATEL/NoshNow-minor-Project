<% layout("/layouts/boilerplate") -%>
    <style>
        #filters {
            margin-top: 1rem;
            display: flex;
            flex-wrap: wrap;
        }

        #filters form button{
            border: none;
            background-color: white;
        }
        .filter button {
            border: none;
            background-color: transparent;
            margin-right: 20px;
        }

        .filter{
            text-align: center;   
            opacity: 0.7;
            cursor: pointer;
        }

        .filter:hover {
            opacity: 1;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }
    
        .tax-toggle {
            border: 1px solid black;
            padding: 0.8rem 1rem;
            border-radius: 1rem;
            margin-top: 20px;
        }

        .nav-menu {
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            flex-wrap: wrap;
        }

        @media(max-width: 1400px) {
            .tax-toggle {
                display: none;
            }
        }
    </style>
    
